<div class="min-h-screen bg-gray-900 text-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white">Settings</h1>
          <p class="mt-2 text-gray-400">Manage your integrations and AI instructions</p>
        </div>
        <.link
          navigate={~p"/chat"}
          class="inline-flex items-center px-4 py-2 border border-gray-600 text-sm font-medium rounded-lg text-white bg-transparent hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.955 8.955 0 01-4.126-.98L3 21l1.98-5.874A8.955 8.955 0 013 12c0-4.418 3.582-8 8-8s8 3.582 8 8z"
            >
            </path>
          </svg>
          Back to Chat
        </.link>
      </div>
    </div>

    <div class="space-y-8">
      <!-- User Profile Section -->
      <div class="bg-gray-800 rounded-lg shadow border border-gray-700">
        <div class="p-6 border-b border-gray-700">
          <h2 class="text-lg font-medium text-white">Profile</h2>
          <p class="mt-1 text-sm text-gray-400">Your account information</p>
        </div>
        <div class="p-6">
          <div class="flex items-center space-x-4">
            <div class="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center">
              <span class="text-white text-xl font-medium">
                {String.first(@current_user.name || @current_user.email) |> String.upcase()}
              </span>
            </div>
            <div>
              <h3 class="text-lg font-medium text-white">
                {@current_user.name || "User"}
              </h3>
              <p class="text-gray-400">{@current_user.email}</p>
              <p class="text-sm text-gray-500 mt-1">
                Joined {Date.to_string(@current_user.inserted_at)}
              </p>
            </div>
          </div>
        </div>
      </div>
      
<!-- Integrations Section -->
      <div class="bg-gray-800 rounded-lg shadow border border-gray-700">
        <div class="p-6 border-b border-gray-700">
          <h2 class="text-lg font-medium text-white">Integrations</h2>
          <p class="mt-1 text-sm text-gray-400">Connect your accounts to enable AI assistance</p>
        </div>
        <div class="p-6 space-y-4">
          <!-- Google Integration -->
          <div class="flex items-center justify-between p-4 bg-gray-700 rounded-lg border border-gray-600">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                  <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                  <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                  <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-white">Google (Gmail & Calendar)</h3>
                <p class="text-sm text-gray-400">
                  {if @gmail_connected,
                    do: "Connected - can read emails and manage calendar",
                    else: "Not connected"}
                </p>
              </div>
            </div>
            <div class={[
              "px-3 py-1 rounded-full text-sm font-medium",
              if(@gmail_connected,
                do: "bg-green-600 text-white",
                else: "bg-gray-600 text-gray-300"
              )
            ]}>
              {if @gmail_connected, do: "Connected", else: "Required"}
            </div>
          </div>
          
<!-- HubSpot Integration -->
          <div class="flex items-center justify-between p-4 bg-gray-700 rounded-lg border border-gray-600">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-orange-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.164 7.93V4.746a4.755 4.755 0 10-9.51 0V7.93a7.976 7.976 0 104.755 14.309A7.976 7.976 0 0018.164 7.93z" />
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-white">HubSpot CRM</h3>
                <p class="text-sm text-gray-400">
                  {if @hubspot_connected,
                    do: "Connected - can manage contacts and notes",
                    else: "Connect to manage CRM contacts"}
                </p>
              </div>
            </div>
            <div class="flex items-center space-x-2">
              <div class={[
                "px-3 py-1 rounded-full text-sm font-medium",
                if(@hubspot_connected,
                  do: "bg-green-600 text-white",
                  else: "bg-yellow-600 text-white"
                )
              ]}>
                {if @hubspot_connected, do: "Connected", else: "Optional"}
              </div>
              <%= if @hubspot_connected do %>
                <button
                  phx-click="disconnect_hubspot"
                  class="text-sm text-red-400 hover:text-red-300 px-3 py-1 rounded border border-red-600 hover:border-red-500 transition-colors"
                >
                  Disconnect
                </button>
              <% else %>
                <button
                  phx-click="connect_hubspot"
                  class="px-3 py-1 bg-orange-600 text-white text-sm rounded hover:bg-orange-700 transition-colors border border-orange-600"
                >
                  Connect
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- AI Instructions Section -->
      <div class="bg-gray-800 rounded-lg shadow border border-gray-700">
        <div class="p-6 border-b border-gray-700">
          <div class="flex items-center justify-between">
            <div>
              <h2 class="text-lg font-medium text-white">AI Instructions</h2>
              <p class="mt-1 text-sm text-gray-400">
                Set up automatic behaviors for your AI assistant
              </p>
            </div>
            <!-- Instructions Count Badge -->
            <div class="flex items-center space-x-3">
              <div class="text-center">
                <div class="text-2xl font-bold text-blue-400">{@active_instructions_count}</div>
                <div class="text-xs text-gray-500">Active</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-gray-400">{@instructions_count}</div>
                <div class="text-xs text-gray-500">Total</div>
              </div>
            </div>
          </div>
        </div>

        <div class="p-6">
          <!-- Instructions Status -->
          <%= if @instructions_count > 0 do %>
            <div class="mb-6 p-4 bg-blue-900/20 border border-blue-700/50 rounded-lg">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-medium text-white">Instructions Active</h3>
                    <p class="text-sm text-blue-300">
                      {@active_instructions_count} of {@instructions_count} instructions are currently active
                    </p>
                  </div>
                </div>
                <.link
                  navigate={~p"/chat"}
                  class="px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-700 transition-colors"
                >
                  Manage Instructions
                </.link>
              </div>
            </div>
          <% else %>
            <div class="mb-6 p-4 bg-gray-700/50 border border-gray-600 rounded-lg">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-gray-600 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-white">No Instructions Set</h3>
                  <p class="text-sm text-gray-400">
                    Set up your first automation instruction through the chat interface
                  </p>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Example Instructions (existing content) -->
          <div class="bg-gray-700 rounded-lg p-4 border border-gray-600">
            <h3 class="font-medium text-white mb-2">Example Instructions</h3>
            <div class="space-y-2 text-sm text-gray-300">
              <p>
                "When someone emails me that is not in HubSpot, please create a contact in HubSpot with a note about the email."
              </p>
              <p>
                "When I create a contact in HubSpot, send them an email telling them thank you for being a client."
              </p>
              <p>
                "When I add an event in my calendar, send an email to attendees telling them about the meeting."
              </p>
            </div>
          </div>

          <div class="mt-4">
            <p class="text-sm text-gray-400 mb-4">
              You can set up these instructions by talking to your AI assistant in the chat.
              Just tell it what you want it to do automatically!
            </p>
            <.link
              navigate={~p"/chat"}
              class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm rounded-lg hover:bg-blue-700 transition-colors"
            >
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.955 8.955 0 01-4.126-.98L3 21l1.98-5.874A8.955 8.955 0 013 12c0-4.418 3.582-8 8-8s8 3.582 8 8z"
                >
                </path>
              </svg>
              Chat with AI Assistant
            </.link>
          </div>
        </div>
      </div>
      
<!-- Danger Zone -->
      <div class="bg-gray-800 rounded-lg shadow border border-red-600">
        <div class="p-6 border-b border-gray-700">
          <h2 class="text-lg font-medium text-red-400">Danger Zone</h2>
          <p class="mt-1 text-sm text-gray-400">Irreversible and destructive actions</p>
        </div>
        <div class="p-6">
          <div class="flex items-center justify-between">
            <div>
              <h3 class="font-medium text-white">Sign Out</h3>
              <p class="text-sm text-gray-400">Sign out of your account</p>
            </div>
            <.link
              href={~p"/auth/logout"}
              method="delete"
              class="px-4 py-2 bg-red-600 text-white text-sm rounded-lg hover:bg-red-700 transition-colors border border-red-600"
              data-confirm="Are you sure you want to sign out?"
            >
              Sign Out
            </.link>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
